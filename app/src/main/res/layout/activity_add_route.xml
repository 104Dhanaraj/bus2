<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edt_route_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Route Name"/>

    <EditText
        android:id="@+id/edt_stop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Stop Name"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_add_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Stop"
        android:layout_marginTop="8dp"/>

    <ListView
        android:id="@+id/list_stops"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_save_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Route"
        android:layout_marginTop="16dp"/>
</LinearLayout>
